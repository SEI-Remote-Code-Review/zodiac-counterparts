          <p class="zod-name">Pisces</p>
          <p class="bday">Feb 19 - Mar 20</p>
        </a>
      </div>     
      <p id="cta-prompt">Click your Sun sign to see its Eastern counterpart!</p>
    </div>

    <% if(user?.profile._id.toString() === '622669962d4ce2771ef2a36a') { %> 
      <div id="add-zodiac">
        <p id="warning">**Admin Access**</p>
        <h2>Add a Zodiac</h2>
        <form action="/zodiacs" method="POST">
          <div id="input-field">
            <label class="form-item">
              W Zod Name: 
              <input class="text-input" size="30" type="text" name="wZodName" autocomplete="off" required>
            </label>
            <label class="form-item">
              E Zod Name: 
              <input class="text-input" size="30" type="text" name="eZodName"  autocomplete="off" required>
            </label>
            <label class="form-item">
              W Zod Desc: 
              <input class="text-input" size="30" type="text" name="wZodDesc"  autocomplete="off" required>
            </label>
            <label class="form-item">
              E Zod Desc: 
              <input class="text-input" size="30" type="text" name="eZodDesc"  autocomplete="off" required>
            </label>
            <label class="form-item">
              W Zod Img URL: 
              <input class="text-input" size="30" type="text" name="wZodImgURL"  autocomplete="off" required>
            </label>
            <label class="form-item">
              E Zod Img URL: 
              <input class="text-input" size="30" type="text" name="eZodImgURL"  autocomplete="off" required>
            </label>
          </div>
          <button class="add-btn btn" type="submit">Add Zodiac</button>
        </form>
      </div>
    <% } %> 
  </section>
