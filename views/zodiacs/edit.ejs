<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/zodiacs/edit.css" />
<%- include('../partials/nav') %>

<main>
  <section>
    <form action="/zodiacs/<%= zodiac._id %>?_method=PUT" method="POST">
      <label>
        <%= zodiac.wZodName %>
        <input type="number"
        name="wZodPollCount"
        value="<%= zodiac.wZodPollCount %>"
        >
        <input type="text"
        name="wZodName"
        value="<%= zodiac.wZodName %>"
        >

      </label>
      <label>
        <%= zodiac.eZodName %>
        <input type="number"
        name="eZodPollCount"
        value="<%= zodiac.eZodPollCount %>"
        >
        <input type="text"
        name="eZodName"
        value="<%= zodiac.eZodName %>"
        >

      </label>
      <button type="submit">Submit</button>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>