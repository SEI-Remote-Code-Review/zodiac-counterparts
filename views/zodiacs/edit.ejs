<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/zodiacs/edit.css" />
<%- include('../partials/nav') %>

<main>
  <section>
    <form action="/zodiacs/<%= zodiac._id %>?_method=PUT" method="POST">
      <label>
        Western Zodiac Name:
        <input type="text"
        name="wZodName"
        value="<%= zodiac.wZodName %>"
        >
      </label>
      <label>
        Western Zodiac Description:
        <input type="text"
        name="wZodDesc"
        value="<%= zodiac.wZodDesc %>"
        >
      </label>
      <label>
        Western Zodiac Image URL:
        <input type="text"
        name="wZodImgURL"
        value="<%= zodiac.wZodImgURL %>"
        >
      </label>
      <label>
        Eastern Zodiac Name:
        <input type="text"
        name="eZodName"
        value="<%= zodiac.eZodName %>"
        >
      </label>
      <label>
        Eastern Zodiac Description:
        <input type="text"
        name="eZodDesc"
        value="<%= zodiac.eZodDesc %>"
        >
      </label>
      <label>
        Eastern Zodiac Image URL:
        <input type="text"
        name="eZodImgURL"
        value="<%= zodiac.eZodImgURL %>"
        >
      </label>
      <button type="submit">Submit</button>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>